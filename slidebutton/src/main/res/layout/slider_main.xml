<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dfdfdf"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/__actions_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <Button
            android:id="@+id/__slider_negative_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="#26ff84"
            android:foreground="?android:attr/selectableItemBackground"
            android:textAllCaps="false"
            tools:text="Cancel" />

        <Button
            android:id="@+id/__slider_positive_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="#ff6969"
            android:foreground="?android:attr/selectableItemBackground"
            android:textAllCaps="false"
            tools:text="Confirm" />

    </LinearLayout>


    <com.rojoxpress.slidebutton.Slider
        android:id="@+id/__slider"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/default_slider_bg"
        android:max="100"
        android:progressDrawable="@drawable/default_slider_progress"
        android:thumb="@drawable/default_slider_thumb"
        android:thumbOffset="0dp" />

    <TextView
        android:id="@+id/__slider_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="slide" />


</FrameLayout>
